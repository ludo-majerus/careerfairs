
<div class="container-fluid">

  <legend>Event <%= @event.event_name %></legend>

  <legend>Companies</legend>
  <% @event.companies.each do |company| %>
      <div class="table table-hover">
        <div class="row-fluid">
          <div class="span12">
            <h4><%= company.name %></h4>
          </div>  
        </div>
        <div class="row-fluid">
          
          <div class="span8">
            <i class="icon-comment"></i> <%= company.comment %>
          </div>

            <div class="span4">
              <%= link_to 'Edit this Company', edit_company_path(company.id), :class => "btn btn-warning " %> 
              <% 
                # Retreive the companytoevent
                c2e =  company.companytoevents.where("event_id = '" + @event.id.to_s + "'").first 
              %>
              <%= link_to 'Badges', companytoevent_badges_path(c2e.id), :class => "btn btn-info " %> 
              <%= link_to 'Jobs', companytoevent_jobs_path(c2e.id), :class => "btn btn-info " %> 
            </div>
        </div>
        <br />
        <hr />
    
    </div>
  <% end %>


  <div class="row-fluid">
    <legend>Documents</legend>
    <ul class="thumbnails">
      <li class="span4">
        <div class="thumbnail">
          <div class="caption"><h3>Catalog</h3></div>
          <a href="<%= @event.catalog.url%>" class="thumbnail" target="_blank">
          <%= image_tag @event.catalog.url(:medium) %>
          </a>
        </div>
      </li>
      <li class="span4">
        <div class="thumbnail">
          <div class="caption"><h3>Technical Information</h3></div>
          <a href="<%= @event.technical_info.url%>" class="thumbnail" target="_blank">
          <%= image_tag @event.technical_info.url(:medium) %>
          </a>
        </div>
      </li>
      <li class="span4">
        <div class="thumbnail">
          <div class="caption"><h3>Event plan</h3></div>
          <a href="<%= @event.event_plan.url%>" class="thumbnail" target="_blank">
          <%= image_tag @event.event_plan.url(:medium) %>
          </a>
        </div>
      </li>
    </ul>
  </div>

</div>
