
<div class="container-fluid">

  <h2>
    Event <%= @current_event.city.to_s + ' / ' + @current_event.date_event.to_s %> 
    <div class="btn-group">
      <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
        Change Event
        <span class="caret"></span>
      </a>
      <ul class="dropdown-menu">
        <% @events.each do |ev| %>
          <li><%= link_to ev.city.to_s + ' / ' + ev.date_event.to_s, events_url + "?event_id=#{ev.id}" %></li>
        <% end %>
      </ul>
    </div>
  </h2>

  <%= link_to 'Create new Event', new_event_path, :class => "btn btn-primary" %>
  <%= link_to 'Update this Event', edit_event_path(@current_event), :class => "btn btn-warning" %>
  <%= link_to 'Destroy this Event', @current_event, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>

  <br /><br /><hr /><br />

  <div class="tabbable tabs-above hidden-phone">
    <div class="tab-content">Filters by Event: </div>
    
    <ul class="nav nav-tabs">
      <% @events.each do |ev| %>
        <% if @current_event.id == ev.id %>
          <li class="active">
        <% else %>
          <li>
        <% end %>

          <%= link_to ev.city.to_s + ' / ' + ev.date_event.to_s, events_url + "?event_id=#{ev.id}" %>
        </li>
      <% end %>
    </ul>
 </div>

  <% @current_event.companies.each do |company| %>
      <div class="table table-hover">
      <div class="row-fluid ">

        <div class="span12">
          <h4 style="display:inline;"><%= link_to company.name, edit_company_path(company.id) %></h4>
        </div>  

      </div>
      <div class="row-fluid">
        
        <div class="span9">
          <%= company.comment %>
          
        </div>

          <div class="span3">
            <% 
              # Retreive the companytoevent
              c2e =  company.companytoevents.where("event_id = '" + @current_event.id.to_s + "'").first 
            %>
            <%= link_to 'Badges', companytoevent_badges_path(c2e.id), :class => "btn btn-info " %> 
            <%= link_to 'Jobs', companytoevent_jobs_path(c2e.id), :class => "btn btn-info " %> 
          </div>
      </div>


      <hr />
    
    </div>
  <% end %>

</div>
