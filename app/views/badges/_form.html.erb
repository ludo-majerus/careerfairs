<%= form_for(@badge, :html => { :class => "form-horizontal"}) do |f| %>

  <% if @badge.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@badge.errors.count, "error") %> prohibited this badge from being saved:</h2>

      <ul>
      <% @badge.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :badge_name, :class => "control-label", :for => "badge_name" %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => 'Badge name (firstname and lastname)' %>
    </div>
  </div>  

  <%= f.hidden_field :companytoevent_id, :value => params[:companytoevent_id] %>
  <%= f.submit :class => "btn btn-primary btn-normal" %>

<% end %>
