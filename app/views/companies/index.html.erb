
<div class="container-fluid">

  <%= link_to 'New Company', new_company_path, :class => "btn btn-primary" %>

  <%= form_tag companies_path, :method => :get, :id => 'company_search', :class => "navbar-search pull-right visible-desktop" do %>
      <%= text_field_tag 'search[name_or_comment_contains]', nil, :class => "search-query", :placeholder => "Company or comment" %>
  <% end %>

  <br /><br /><hr /><br />

  <div class="tabbable tabs-above">
    <div class="tab-content">Filters by Event: </div>
    
    <ul class="nav nav-tabs">

      <% if params[:event_id].nil? %>
        <li class="active">
      <% else %>
        <li>
      <% end %>
        <%= link_to "All", companies_url %>
      </li>
      <% @events.each do |ev| %>
        <% if params[:event_id].to_s == ev.id.to_s %>
          <li class="active">
        <% else %>
          <li>
        <% end %>

          <%= link_to ev.city.to_s + ' / ' + ev.date_event.to_s, companies_url + "?event_id=#{ev.id}" %>
        </li>
      <% end %>
    </ul>

  </div>

  <% @companies.each do |company| %>
      <div class="table table-hover">
      <div class="row-fluid ">

        <div class="span12">
          <h4 style="display:inline;"><%= link_to company.name, edit_company_path(company) %></h4>
        </div>  

      </div>
      <div class="row-fluid">
        
        <div class="span9">
          <%= company.comment %>
          <br /><br />
          <% @events.each do |ev| %>
            <% if company.companytoevents.where("event_id = '" + ev.id.to_s + "'").blank? %> 
              <span class="label label-important">Not subscribed</span>
            <% else %>
              <span class="label label-success">Subscribed</span>
            <% end %> 
            Event <%= ev.id.to_s + ' / ' + ev.city.to_s + ' / ' + ev.date_event.to_s %> 

            <br />
          <% end %>

        </div>

          <div class="span3">
            <div class="btn-group" data-toggle="buttons-checkbox" style="text-align: center;">
              <%= link_to 'Contacts', contacts_path(:company_id => company.id), :class => "btn btn-info " %> 
              <%= link_to 'Edit', edit_company_path(company), :class => "btn btn-warning " %> 
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
            </div>
          </div>
      </div>


      <hr />
    
    </div>
  <% end %>

  <div class="flickr_pagination pagination-centered">
    <%= will_paginate @companies, :class => "flickr_pagination"  %>
  </div>
</div>
