
<div class="container-fluid">

  <%= link_to 'New Company', new_company_path, :class => "btn btn-primary" %>

  <%= form_tag companies_path, :method => :get, :id => 'company_search', :class => "navbar-search pull-right visible-desktop" do %>
      <%= text_field_tag 'search[name_or_comment_contains]', nil, :class => "search-query", :placeholder => "Company or comment" %>
  <% end %>

  <br /><br /><hr /><br />

  <legend>Companies</legend>

  <% @companies.each do |company| %>
      <div class="table table-hover">
        <div class="row-fluid">
          <div class="span12">
            <h4><%= company.name %></h4>
          </div>  
        </div>
        <div class="row-fluid">
          
          <div class="span8">
            <i class="icon-comment"></i> <%= company.comment %> <br />
            <% @events.each do |ev| %>
              <% 
              if company.companytoevents.where("event_id = '" + ev.id.to_s + "'").blank? then
                label_class = 'important' 
                label = 'Not subscribed'  
              else 
                label_class = 'success'
                label = 'Subscribed' 
              end
              %>
              <span class="label label-<%= label_class %>"><%= label %></span>
              Event <%= ev.id.to_s + ' / ' + ev.city.to_s + ' / ' + ev.date_event.to_s %> 
              <br />
            <% end %>
          </div>

            <div class="span4">
              <%= link_to 'Edit this Company', edit_company_path(company.id), :class => "btn btn-warning " %>               
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
              <br />
              <%= link_to 'Contacts', company_contacts_url(company.id), :class => "btn btn-info " %> 

            </div>
        </div>
        <br />
        <hr />
    
    </div>
  <% end %>


  <div class="flickr_pagination pagination-centered">
    <%= will_paginate @companies, :class => "flickr_pagination"  %>
  </div>
</div>
