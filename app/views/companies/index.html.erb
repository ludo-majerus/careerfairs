
<div class="container-fluid">

  <a href="/companies/new" class="btn btn-primary btn-large"><%= t(:create_new_company)%></a>


  <%= form_tag companies_path, :method => :get, :id => 'company_search', :class => "navbar-search pull-right visible-desktop" do %>
      <%= text_field_tag 'search[name_or_comment_contains]', nil, :class => "search-query", :placeholder => "Search" %>
  <% end %>

  <br /><br /><hr /><br />

  <% @companies.each do |company| %>
      <div class="table table-hover">
      <div class="row-fluid ">

        <div class="span12">
          <h4 style="display:inline;"><%= link_to company.name, edit_company_path(company) %></h4>
        </div>  

      </div>
      <div class="row-fluid">
        
        <div class="span9">
          <%= company.comment %>
        </div>

          <div class="span3">
            <div class="btn-group" data-toggle="buttons-checkbox" style="text-align: center;">
              <%= link_to 'Edit', edit_company_path(company), :class => "btn btn-primary btn-mini" %> 
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger btn-mini" %>
            </div>
          </div>
      </div>

      <hr />
    
    </div>
  <% end %>

  <div class="flickr_pagination pagination-centered">
    <%= will_paginate @companies, :class => "flickr_pagination"  %>
  </div>
</div>
