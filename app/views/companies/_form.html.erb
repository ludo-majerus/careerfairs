
<%= form_for(@company, :html => { :class => "form-horizontal", :multipart => true}) do |f| %>

  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
        <label class="control-label" id="company_title"> <strong>Name: </strong></label>  
        <div class="controls">
            <%= f.text_field :name, :class => 'span10', :placeholder => 'Company name' %>
        </div>
  </div>
  <div class="control-group">
        <label class="control-label" id="company_body"><strong>Description: </strong></label> 
        <div class="controls">  
          <%= f.text_area :description, :class => 'span10 tinymce', :placeholder => 'Company description' %> 
        </div>
  </div>
  <div class="control-group">
        <label class="control-label" id="company_title"><strong>Adresse: </strong> </label> 
        <div class="controls">  
           <%= f.text_field :address, :class => 'span10', :placeholder => 'Company address' %> 
        </div>
  </div>
  <div class="control-group">
        <label class="control-label" id="company_website"><strong>Website:  </strong> </label> 
        <div class="controls">  
           <%= f.text_field :website, :class => 'span10', :placeholder => 'Company website' %>
        </div>
  </div>

  <% if session[:current_user_admin].present? %>
    <div class="control-group">
          <label class="control-label" id="company_body"><strong>Comment:  </strong> </label> 
          <div class="controls">  
             <%= f.text_area :comment, :class => 'span10 tinymce', :placeholder => 'Comment (only for admin)' %>
          </div>
    </div>
  <% end %>

  <div class="control-group">
    <label class="control-label" id="company_logo"><strong>Picture:  </strong> </label> 
    <div class="controls">  
      <div class="fileupload fileupload-new" data-provides="fileupload">
          <div class="input-append">
            <div class="uneditable-input span3">
              <i class="icon-file fileupload-exists"></i>
              <span class="fileupload-preview"></span>
            </div>
            <span class="btn btn-file">
            <span class="fileupload-new">Select file</span>
            <span class="fileupload-exists">Change</span>
              <input type="file">
            </span>
            <a class="btn fileupload-exists" data-dismiss="fileupload" href="#">Remove</a>
          </div>
        </div>
    </div>
  </div>

  <div class="control-group">        
        <div class="controls">  
           <%= f.submit :class => "btn btn-primary btn-normal" %>
        </div>
  </div>
  
  
<% end %> 

