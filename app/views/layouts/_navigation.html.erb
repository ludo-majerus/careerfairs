<header class="navbar navbar-inverse navbar-static-top">
  <nav class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <%= link_to "CB Careerfairs", root_path, :class => 'brand' %>

      <div class="nav-collapse">
        <ul class="nav">

          <li class="dropdown">
            <a href="/events" class="dropdown-toggle" data-toggle="dropdown"><%= t(:manage_events)%> <b class="caret"></b></a>
            <ul class="dropdown-menu">

              <li><%= link_to Event.find(session[:current_event]).event_name, event_path(session[:current_event])%></li>
              <li><%= link_to "Update this Event", edit_event_url(session[:current_event]) %></li>
              <li><%= link_to "Manage the documents", event_url(session[:current_event]) %></li>
              <li><%= link_to "Destroy this Event", Event.find(session[:current_event]), method: :delete, data: { confirm: 'Are you sure?' }, :class=> "text-warning" %></li>
              <li class="divider"></li>

              <li><a href="#">Companies</a></li>
              <li><%= link_to "Stands", event_stands_url(session[:current_event]) %></li>
              <li class="divider"></li>

              <li class="nav-header">Guests</li>
              <li><%= link_to "Validation of guests", event_guests_path(session[:current_event])%></li>
              <li><%= link_to "Export as Excel", event_guests_path(session[:current_event], :format => "xls")%></li>
              <li class="divider"></li>

              <li class="nav-header">Badges</li>
              <li><a href="#">Manage Badges</a></li>
              <li><a href="#">Export all badges</a></li>
              <li class="divider"></li>

              <li class="nav-header">Manage Events</li>
              <li><%= link_to "Create a new Event", new_event_path%></li>
              <li class="dropdown-submenu">
                <a tabindex="-1" href="#">Change Event</a>
                <ul class="dropdown-menu">
                  <% @events.each do |ev| %>
                    <li><%= link_to ev.event_name, event_url(ev.id) %></li>
                  <% end %>
                </ul>
              </li>

            </ul>
          </li>
          <li class="divider-vertical"></li>

          <li class=""><a href="/companies"><%= t(:manage_companies)%></a></li>
          <li class="divider-vertical"></li>

          <li class=""><a href="/mails"><%= t(:manage_mails)%></a></li>
          <li class="divider-vertical"></li>

          <li class=""><a href="/htmlpages"><%= t(:manage_html_pages)%></a></li>
          <li class="divider-vertical"></li>

          <li class="">
          <% if session[:current_user_authenticated].nil? %>
            <a href="/sessions/new"><%= t(:login)%></a>
          <% else %>
            <p class="navbar-text">
              Hello <%= Contact.find(session[:current_user_authenticated]).name %>
              <% if session[:current_user_admin] %>
                <span class="label label-important">ADMIN</span>
              <% end %>
              <em>(<a href="/sessions/logout"><%= t(:logout)%></a>)</em>
            </p>
          <% end %>
          </li>

        </ul>
      </div>

    </div>
  </nav>
</header>

<ul class="breadcrumb">
  <li><a href="/">Home</a> <span class="divider">/</span></li>
  <li><%= link_to params["controller"].capitalize, :controller => params["controller"], :action => "index" %> </li>
  <% if params["action"] != "index" %>
    <li class="active"><span class="divider">/</span><%= link_to params["action"].capitalize, :controller => params["controller"], :action => params["action"] %></li>
  <% end %>
</ul>
