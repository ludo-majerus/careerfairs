<%= form_for @guest, :url => { :action => "create" },:html => {:class => "form-horizontal"} do |f| %>

  <% if @guest.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@guest.errors.count, "error") %> prohibited
        this post from being saved:</h2>
    <ul>
    <% @guest.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
    <div id="eventLabel" class="label">CareerFair : <span id="eventName"><%=  @event.event_name %></span></div>
	
	<fieldset>
	<div class="control-group">
		<label class="control-label" for="username">Firstname</label>
		<div class="controls">
			<%= f.text_field :firstname %>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="username">LastName</label>
		<div class="controls">
			<%= f.text_field :lastname %>			
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="username">Email</label>
		<div class="controls">
			<%= f.text_field :email, :as => :email %>		
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="username">Resume</label>
		<div class="controls">
			<%= f.text_area :resume, :cols => 100  %>
			<p class="help-block">Resume should be at least 150 characters</p>
		</div>
	</div>
	<div class="control-group">
		<label class="control-label" for="username">Please select your Fair</label>
		<div class="controls">
				<%= f.select :event_id, @events.map{|e| [e.event_name, e.id]},:selected => params[:event_id]%>
			
		</div>
	</div>	
	<div class="control-group">
			<div class="controls">
		  <%= f.button :submit,:class => "btn btn-success" %>
		</div>
	</div>
  </fieldset>
	
<% end %>


